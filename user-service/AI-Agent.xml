<?xml version="1.0" encoding="utf-8"?>
<ApplicationInsightsAgent>
    <Instrumentation>
        <BuiltIn enabled="true">
            <HTTP enabled="true" W3C="true" enableW3CBackCompat="true"/>

            <!--    Set SQL query duration above which query plan is reported (MySQL, PostgreSQL).
                    Default is 10000 ms.
            -->
           <MaxStatementQueryLimitInMS>1000</MaxStatementQueryLimitInMS>
        </BuiltIn>

        <!-- Collect data about caught exceptions and method execution times -->
        <Class name="io.example.KafkaSink">
           <Method name="handleMessage" reportCaughtExceptions="true" reportExecutionTime="true" />
        </Class>
        <Class name="io.example.MainController">
            <Method name="addNewUser" reportCaughtExceptions="true" reportExecutionTime="true" />
            <Method name="getAllUsers" reportCaughtExceptions="true" reportExecutionTime="true" />
        </Class>

    </Instrumentation>
</ApplicationInsightsAgent>