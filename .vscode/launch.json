    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "UserService",
            "request": "launch",
            "mainClass": "com.usermanagement.UserService",
            "projectName": "user-service",
            "args": "--javaagent:/user-service/applicationinsights-agent-2.4.0-BETA-SNAPSHOT.jar"
        },
        {
            "type": "java",
            "name": "RecommendationService",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.recommendations.RecommendationService",
            "projectName": "recommendation-service",
            "args": ""
        }
    ]
}